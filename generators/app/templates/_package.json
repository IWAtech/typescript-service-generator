{
  "name": "<%= appname %>",
  "version": "0.1.0",
  "description": "<%= appname %>",
  "author": "",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf lib",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "start": "node lib/index.js",
    "start:dev": "nodemon lib/index.js",
    "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty",
    "build:docker": "npm run build && docker build -t <%= orgname %>/<%= appname %>:latest . && docker push <%= orgname %>/<%= appname %>:latest",
    "test": "jasmine --config=jasmine.json",
    "test:coverage": "nyc --include=\"src/**/*.ts\" --reporter=text --reporter=html --reporter=lcov jasmine --config=jasmine.json",
    "watch": "npm run build -- --watch",
    "watch:test": "nodemon -w test -w src --exec npm run test"
  },
  "dependencies": {
    "restify": "^4.3.0"
  },
  "devDependencies": {
    "@types/node": "^7.0.0",
    "@types/restify": "^4.3.4",
    "@types/jasmine": "^2.5.53",
    "jasmine": "^2.6.0",
    "nyc": "^10.0.0",
    "nodemon": "^1.11.0",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
